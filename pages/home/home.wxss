/* pages/home/home.wxss */
#header{
  height: 90rpx;
border-bottom: solid 1rpx #e8e8e8;
}
.search{
  height: 90rpx;
  width: 90rpx;
  padding-right: 5rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
#header .channels{
  width: 465rpx;
  height: 90rpx;
  white-space: nowrap;
} 
.pull-left{
  float: left;
}
#header .channels view{
  display: inline-block;
  width:64rpx;
  height:84rpx;
  margin-right: 32rpx;
  font-size: 30rpx;
  line-height: 90rpx;
  
}
#header .channels .active{
  border-bottom: 6rpx solid #f85959;
  color:#f85959;
}
#header .plus{
  width: 90rpx;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-left: 1rpx solid #ddd;
  box-shadow: -2rpx 0rpx 4rpx #ddd;
}
#header .user{
  width: 90rpx;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
#content{
  width:100%;
  height: 1000rpx;
}
#content swiper{
  height:100%;
}
.news-list{
height:100%;
 padding: 0 30rpx;
 width: 690rpx;
}
.news-list .item{
  padding: 30rpx 0;
  min-height: 80rpx;
  border-bottom: 1rpx solid #e8e8e8;
}
.news-list .item .title{
  font-size: 36rpx;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.news-list .item .medio{
  font-size: 23rpx;
  color:#999999;
  padding-top: 20rpx;
}
#zhezhao{
width: 100%;
height: 100%;
position: absolute;
left:0;
top:0;
background: white;
padding-top: 35rpx;
padding-left: 30rpx;
}
.mine-channels{
  width:100%;
  height: 40%;

}
.title{
  
  padding-bottom: 30rpx;
}
.title .b-title{
  font-size: 40rpx;
  font-weight: bold;
}
.title .s-title{
  padding-left: 20rpx;
  font-size: 30rpx;
  color:#999999;
}
.channels .item{
  width: 160rpx;
  height:80rpx;
  font-size: 30rpx;
  background: #e8e8e8;
  float: left;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  line-height: 80rpx;
  text-align: center;
  position: relative;
}
.mine-channels .channels .item image{
  position: absolute;
  top:0;
  right: 0;
  opacity: 0.8
}